<?xml version="1.0"?>
<config>
    <global>
        <models>
            <aoe_varnishtag>
                <class>Aoe_VarnishTag_Model</class>
            </aoe_varnishtag>
        </models>
        <events>
            <model_save_after>
                <observers>
                    <aoe_varnishtag>
                        <type>singleton</type>
                        <class>aoe_varnishtag/observer</class>
                        <method>modelSaveAfter</method>
                    </aoe_varnishtag>
                </observers>
            </model_save_after>
        </events>
    </global>

    <frontend>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <aoe_varnishtag>
                        <type>singleton</type>
                        <class>aoe_varnishtag/observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </aoe_varnishtag>
                </observers>
            </core_block_abstract_to_html_before>
            <http_response_send_before>
                <observers>
                    <aoe_varnishtag>
                        <type>singleton</type>
                        <class>aoe_varnishtag/observer</class>
                        <method>httpResponseSendBefore</method>
                    </aoe_varnishtag>
                </observers>
            </http_response_send_before>
        </events>
    </frontend>
</config>
